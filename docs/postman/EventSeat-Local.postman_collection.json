                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{attendeeToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{orderBaseUrl}}/api/v1/orders/{{orderId}}",
                            "host": [
                                "{{orderBaseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders",
                                "{{orderId}}"
                            ]
                        },
                        "description": "Reads order details. Useful for verifying final state and amounts."
                    },
                    "response": []
                }
            ]
        }
    ]
