        {
            "name": "3 - Orders (direct to service @8083)",
            "description": "Idempotent checkout using mock payments. If simulate=decline or simulate=timeout is used, the order remains PENDING and seats remain HELD.",
            "item": [
                {
                    "name": "Create Order (idempotent) - success path",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{attendeeToken}}"
                            },
                            {
                                "key": "Idempotency-Key",
                                "value": "{{idempotencyKeySuccess}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"attendeeId\": 1,\n  \"eventId\": {{eventId}},\n  \"seatIds\": [1,2],\n  \"currency\": \"USD\",\n  \"holdId\": {{holdId}}\n}"
                        },
                        "url": {
                            "raw": "{{orderBaseUrl}}/api/v1/orders",
                            "host": [
                                "{{orderBaseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders"
                            ]
                        },
                        "description": "Creates an order idempotently and confirms on mock payment success. Seats change HELD → SOLD; order PENDING → CONFIRMED."
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "try {",
                                    "  const data = pm.response.json();",
                                    "  pm.environment.set(\"orderId\", data.id);",
                                    "  pm.test(\"Order confirmed\", function () { pm.expect(data.state).to.eql('CONFIRMED'); });",
                                    "} catch (e) { /* ignore */ }"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "response": []
                },
                {
                    "name": "Create Order (idempotent replay same key+body)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{attendeeToken}}"
                            },
                            {
                                "key": "Idempotency-Key",
                                "value": "{{idempotencyKeySuccess}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"attendeeId\": 1,\n  \"eventId\": {{eventId}},\n  \"seatIds\": [1,2],\n  \"currency\": \"USD\",\n  \"holdId\": {{holdId}}\n}"
                        },
                        "url": {
                            "raw": "{{orderBaseUrl}}/api/v1/orders",
                            "host": [
                                "{{orderBaseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders"
                            ]
                        },
                        "description": "Replays the same idempotent key and body. Returns the cached successful response."
                    },
                    "response": []
                },
                {
                    "name": "Create Order (simulate=decline)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{attendeeToken}}"
                            },
                            {
                                "key": "Idempotency-Key",
                                "value": "KEY-DECLINE-1"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"attendeeId\": 1,\n  \"eventId\": {{eventId}},\n  \"seatIds\": [3,4],\n  \"currency\": \"USD\",\n  \"holdId\": 0,\n  \"simulate\": \"decline\"\n}"
                        },
                        "url": {
                            "raw": "{{orderBaseUrl}}/api/v1/orders",
                            "host": [
                                "{{orderBaseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders"
                            ]
                        },
                        "description": "Simulates payment decline. Useful to test failure branch and ensure idempotency behavior."
                    },
                    "response": []
                },
                {
                    "name": "Create Order (simulate=timeout)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{attendeeToken}}"
                            },
                            {
                                "key": "Idempotency-Key",
                                "value": "KEY-TIMEOUT-1"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"attendeeId\": 1,\n  \"eventId\": {{eventId}},\n  \"seatIds\": [5,6],\n  \"currency\": \"USD\",\n  \"holdId\": 0,\n  \"simulate\": \"timeout\"\n}"
                        },
                        "url": {
                            "raw": "{{orderBaseUrl}}/api/v1/orders",
                            "host": [
                                "{{orderBaseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders"
                            ]
                        },
                        "description": "Simulates payment timeout. Useful to test retry strategies and user messaging."
                    },
                    "response": []
                },
